<?xml version="1.0" encoding="UTF-8"?>
<manifest>
  <!-- Repositories -->
  <!-- Linaro Repositories -->
  <remote  name="linaro-private"
           fetch="ssh://git@dev-private-git.linaro.org/"
           review="https://dev-private-review.linaro.org/"
           />

  <remote name="linaro-android"
          fetch="git://android.git.linaro.org/"
          review="review.android.git.linaro.org"
          />

  <remote name="linaro-other"
          fetch="git://git.linaro.org/"
          />

  <remote name="github"
          fetch="http://github.com/96boards"
          />

  <!-- Remove ART optimization related projects -->
  <remove-project name="platform/art"/>
  <remove-project name="platform/bionic"/>
  <remove-project name="platform/build"/>
  <remove-project name="platform/external/vixl"/>

  <!-- Add ART optimization related projects -->
  <project path="art" name="linaro-art/platform/art" revision="master" remote="linaro-private"/>
  <project path="bionic" name="linaro-art/platform/bionic" revision="master" remote="linaro-private"/>
  <project path="build" name="linaro-art/platform/build" revision="master" remote="linaro-private" >
    <copyfile src="core/root.mk" dest="Makefile" />
  </project>
  <project path="external/vixl" name="linaro-art/platform/external/vixl" revision="master" remote="linaro-private" />
  <!-- android patchset project for apply patchsets -->
  <project path="android-patchsets" name="android-patchsets" revision="master" remote="linaro-android"/>

  <!-- Linaro Device Configs -->
  <!--TODO: need to change to master branch for this common git tree after the master branch ready-->
  <project path="device/linaro/build" name="device/linaro/common" remote="linaro-android" revision="android-master"/>
  <project path="device/linaro/juno" name="android/device/linaro/juno" revision="linaro-lollipop" remote="linaro-android" />
  <project path="device/linaro/juno32" name="device/linaro/juno32" revision="linaro-lollipop" remote="linaro-android" />
  <project path="device/linaro/juno_prebuilt_kernel" name="android/device/linaro/juno_prebuilt_kernel" revision="linaro-lollipop" remote="linaro-android" />
  <project path="device/linaro/hikey" name="android_device_linaro_hikey" revision="master" remote="github" groups="device,hikey" />

  <!-- Linaro Kernels -->
  <project path="kernel/linaro/armv8" name="landing-teams/working/arm/kernel-release" revision="lsk-3.18-armlt" remote="linaro-other" />
  <project path="kernel/linaro/hisilicon" name="linux" revision="hikey" remote="github" groups="non-default,hikey" />

  <!--For Hikey Board -->
  <project path="packages/apps/UsbSpeedSwitch" name="android_packages_apps_UsbSpeedSwitch" revision="master" remote="github" groups="device,hikey" />

</manifest>
